<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поля для ввода данных пользователя -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Имя" />
    <EditText android:id="@+id/edit_user_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите имя" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Логин" />
    <EditText android:id="@+id/edit_user_login" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите логин" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email" />
    <EditText android:id="@+id/edit_user_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите email" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Пароль" />
    <EditText android:id="@+id/edit_user_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите пароль" android:inputType="textPassword" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Номер телефона" />
    <EditText android:id="@+id/edit_user_phone_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите номер телефона" android:inputType="phone" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Роль" />
    <EditText android:id="@+id/edit_user_role" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите роль" />

</LinearLayout>
